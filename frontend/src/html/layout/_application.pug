block config
  - title = ''
  - path = '/'

doctype html
html(lang="ja" dir="ltr")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    title= title
    link(href=`${path}assets/application.css` rel="stylesheet" media="all" type="text/css")
  body
    main.main
      block content

    block scripts
      script(src=`${path}assets/application.js`)
